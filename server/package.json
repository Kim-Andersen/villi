{
  "name": "villi-server",
  "scripts": {
    "start": "DEBUG=*,-nodemon*,-koa* npx nodemon src/server.ts",
    "build": "tsc",
    "setup": "npm run symlink-shared && npm run migrate up && npm run seed",
    "symlink-shared": "symlink-dir \"../shared/src\" \"src/shared\"",
    "migrate": "npm run tsnode -- node_modules/.bin/node-pg-migrate -j ts",
    "seed": "npm run tsnode -- seeds/seeder.ts",
    "tsnode": "NODE_OPTIONS='--abort-on-uncaught-exception' ts-node -r dotenv/config"
  },
  "devDependencies": {
    "@types/debug": "4.1.7",
    "@types/fs-extra": "9.0.13",
    "@types/http-errors": "1.8.2",
    "@types/koa": "2.13.4",
    "@types/koa__cors": "3.3.0",
    "@types/koa-cors": "0.0.2",
    "@types/koa-logger": "3.1.2",
    "@types/koa-mount": "4.0.1",
    "@types/koa-router": "7.4.4",
    "@types/koa-static": "4.0.2",
    "@types/lodash": "4.14.182",
    "@types/node": "17.0.42",
    "@types/node-fetch": "2.6.1",
    "@types/node-geocoder": "3.24.4",
    "@types/sharp": "0.30.4",
    "@types/uuid": "8.3.4",
    "nodemon": "2.0.16",
    "symlink-dir": "5.0.1",
    "typescript": "4.7.2"
  },
  "dependencies": {
    "@koa/cors": "3.3.0",
    "ajv": "8.11.0",
    "aws-sdk": "2.1153.0",
    "debug": "4.3.4",
    "dotenv": "16.0.1",
    "fs-extra": "10.1.0",
    "http-status": "1.5.2",
    "install": "0.13.0",
    "koa": "2.13.4",
    "koa-body": "5.0.0",
    "koa-logger": "3.2.1",
    "koa-mount": "4.0.0",
    "koa-router": "10.1.1",
    "koa-static": "5.0.0",
    "lodash": "4.17.21",
    "node-fetch": "2.6.7",
    "node-geocoder": "4.0.0",
    "node-pg-migrate": "6.2.1",
    "node-ts-cache-storage-memory": "4.4.0",
    "npm": "8.12.1",
    "pg": "8.7.3",
    "sharp": "0.30.6",
    "ts-node": "10.8.1"
  }
}
